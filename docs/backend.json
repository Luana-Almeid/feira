
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "cpf": {
            "type": "string",
            "description": "The user's CPF (Brazilian individual taxpayer registry)."
        },
        "role": {
          "type": "string",
          "enum": ["administrador", "funcionario"],
          "description": "The user's role in the system."
        },
        "status": {
            "type": "string",
            "enum": ["ativo", "inativo"],
            "description": "The user's employment status."
        },
        "dismissalDate": {
            "type": "string",
            "format": "date-time",
            "description": "The date the employee was dismissed."
        }
      },
      "required": ["uid", "name", "email", "cpf", "role", "status"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in inventory.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "purchasePrice": { "type": "number" },
        "sellingPrice": { "type": "number" },
        "stock": { "type": "number" },
        "unit": { "type": "string", "enum": ["unidade", "kg"] },
        "category": { "type": "string", "enum": ["Fruta", "Produto Processado", "Bebida", "Outro"] },
        "lowStockThreshold": { "type": "number" }
      },
      "required": ["id", "name", "purchasePrice", "sellingPrice", "stock", "unit", "category", "lowStockThreshold"]
    },
    "Transaction": {
        "title": "Transaction",
        "description": "Represents a sale, purchase, or discard transaction.",
        "type": "object",
        "properties": {
            "id": { "type": "string" },
            "type": { "type": "string", "enum": ["Venda", "Compra", "Descarte"] },
            "date": { "type": "string", "format": "date-time" },
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "productId": { "type": "string" },
                        "productName": { "type": "string" },
                        "quantity": { "type": "number" },
                        "unitPrice": { "type": "number" }
                    },
                    "required": ["productId", "productName", "quantity", "unitPrice"]
                }
            },
            "total": { "type": "number" },
            "reason": { "type": "string" }
        },
        "required": ["id", "type", "date", "items", "total"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user, keyed by their UID."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores inventory product information."
    },
    "/transactions/{transactionId}": {
        "schema": {
            "$ref": "#/entities/Transaction"
        },
        "description": "Stores all sale, purchase, and discard transactions."
    }
  }
}
